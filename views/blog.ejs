<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('partials/head.ejs') %>
        <title>Blog App</title>
</head>

<body>
    <%- include('partials/nav.ejs') %>
        <div class="container-fluid mb-3">
            <h1 class="m-2">
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageURL %>" class="img-fluid" alt="Blog Image" height="300px" width="100%">
            <p>
                <%= blog.body %>
            </p>
            <% if(locals.user) {%>
                <div>
                    <h3>Author: <%= blog.author.fullName %>
                    </h3>
                    <img src="<%= blog.author.profileImageUrl %>" alt="Profile Image" class="rounded-circle" height="60px"
                        width="60px">
                </div>
                <label for="floatingTextarea" class="mt-3">Add your Comment here:</label>
                <form action="/blog/comment/<%= blog.author.id %>" class="" method="POST">
                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea" name="content"></textarea>
                    <button type="submit" class="btn btn-primary mt-3">Submit</button>
                </form>
            <%}%>
            
            <label for="floatingTextarea" class="mt-3">Comments:</label>
            <!-- <div class="container">
                <% comments.forEach (comment=> { %>
                    <p>
                        <%= comment.content %>
                    </p>
                <%}%>    
            </div> -->
        </div>
        <%- include('partials/script.ejs') %>
</body>

</html>