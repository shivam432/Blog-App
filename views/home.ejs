<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head.ejs') %>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
</head>

<body>
    <%- include('partials/nav.ejs') %>
        <div class="container-fluid m-3">
            <div class="row justify-content-md-center">

                <% blogs.forEach (blog=> { %>
                    <div class="col col-lg-3 col-md-4 col-sm-12">
                        <div class="card m-5" style="width: 18rem;height: 18rem;">
                            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Profile Image">
                            <div class="card-body" style="height: fit-content;">
                                <h5 class="card-title">
                                    <%= blog.title %>
                                </h5>
                                <a href="/blog/<%= blog._id %>" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>

            </div>
        </div>
        <%- include('partials/script.ejs') %>
</body>

</html>